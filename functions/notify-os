#!/usr/bin/env zsh

# Kills a process running on a specified tcp port
notify-os() {
  echo "ðŸ”” Displaying OS Notification ðŸ””"
  echo "   â†’ with text: '$1'"

  # OS specific
  case "$OSTYPE" in
  # Mac
  darwin*)
    osascript -e "display notification \"$1\" sound name \"Boop\""
    ;;
  # Linux
  linux*)
    notify-send --urgency=low -i "$($1)"
    ;;
  esac
}
